<% content_for :nav do %>
  <%= render 'layouts/nav/public' %>
<% end %>

<% if true %>
<h3 class="page-title"> Search All Projects </h3>
<p class="light"> </p>
<hr>

<div class="span9">
	<% if @projects.blank? %>
	    <h3 class="page-title center"> There are no projects here.</h3>
	<% else %>
		<ul>
		<% @projects.each do |project| %>
				<h4 class="project-title">
					<span class="access-icon">
					<% if project.public %>
					<i class="icon-globe" style="margin-top:5px;"></i>
					<% else %>
					<i class="icon-lock" style="margin-top:5px;"></i>
					<% end %>
					</span>
					
					<%= link_to project.name, project_path(project), :class=>"project" %>
				</h4>
				<p><%= project.tagline %> </p>
				<div class="last-activity">
				<span class="light">Last activity:</span>
				<span class="date"><%= project.last_edited %></span>
				</div>
			<hr>
		<% end %>
	</ul>
	<% end %>
</div>

