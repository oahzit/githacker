<div class='span12'>
	    <h3 class="page-title center"> Browse all our public projects here</h3>

<%  Project.public_viewing.each do |project| %>

<div class='span4' style="margin:0px;">
<div class='card' style="background: no-repeat;background-size:cover;">

<div class='banner'>
    <div class='mainline'>
    	<%= link_to project.name, project_path(project) %>
    </div>
    <div class='tagline'> 
        <%= project.tagline %>, 
        	<a href="<%= project.website %>" target="_blank">Website</a>

        <span class='more-details'></span>
        </p>
    </div>
</div>
</div>
</div>
<% end %>
</div>
<% end %>

