
<style type="text/css">
main{background-color:#daecee;}
</style>

<section id="content">
	<h2>Sign in</h2>

	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :class=> "form-horizontal") do |f| %>
	<div class="form-inputs">
		<%= f.label :email %>
		<%= f.email_field :email, :class => "form-control", required: true, autofocus: true, prompt: "Choose field type" %>

		<%= f.label :password %>
		<%= f.password_field :password, :class => "form-control", required: true %>    

	</div>

	<div class="form-actions">
		<%= f.button :submit, "Sign in", :class => "btn btn-primary pull-right" %>
	</div>
	<% end %>

	<%= render "devise/shared/links" %>
</section>