<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => "form-horizontal") do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label :name %>
    <%= f.email_field :name, :class => "form-control", required: true, autofocus: true, prompt: "Choose field type" %>

    <%= f.label :email %>
    <%= f.email_field :email, :class => "form-control", required: true, autofocus: true, prompt: "Choose field type" %>

    <%= f.label :password %>
    <%= f.password_field :password, :class => "form-control", required: true %>   

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => "form-control", required: true %>   
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
