<% content_for :nav do %>
<%= render 'layouts/nav/project' %>
<% end %>

<style type="text/css">
body{
	background-color: #eee;
}
.discussions-body {
	display:inline-block;
	background-color: #fff;
	margin: 0 auto;
	box-shadow: 0 1px 2px #aaa;
	border-collapse: collapse;
	border: 0;
	text-shadow: none;
	width:100%;
	background-color: #fff;
}

</style>

<script type="text/javascript">
$(document).ready(function() {
	$("#new_issue_form").hide();
});
</script>

<div class="row">
<% @discussion = Issue.new %>
	<div class="col-lg-12">
		<div class="project_clone_panel">
			<strong>Issues for <%= @project.name %> </strong>
			<span class="glyphicon glyphicon-plus-sign pull-right" style="font-size:20px;" onClick='$("#new_issue_form").toggle();'></span>			
		</div>
		<section class="discussions-body" id="new_issue_form" style="margin-top:-15px;margin-bottom:20px;">
			<div style="padding-bottom:10px;">
				<%= render 'discussions/form'%>
			</div>
		</section>
	</div>

	<% if !@issues.present? %>
	<p class="center"> There are no open issues for this project.</p>
	<% else %>


	<section class="discussions-body simpletable" style="width:97%;margin-left:15px;">
		<table class="table table-condensed table-hover">
			<th>
				<td></td>
				<td><strong>Topic</strong></td>
				<td><strong>Participants</strong></td>
				<td><strong>Posts</strong></td>
				<td><strong>Last Activity</strong></td>
				<td></td>
			</strong>
			</th>
			<tbody>
				<% @issues.each do |issue| %>
				<tr>
					<td style="width:10px;">
						<span><%= link_to '<span class="glyphicon glyphicon-arrow-up">'.html_safe, up_vote_issue_path(issue) %></span>
						<strong style="margin-left:3px;"><%= issue.vote_count %></strong>
						<p style="margin-top:5px;"><%= link_to '<span class="glyphicon glyphicon-arrow-down">'.html_safe, down_vote_issue_path(issue) %></p>
					</td> 
					<td style="width:45px;">					
						<img alt="" style="margin-top: 6px;" class="avatar" src="https://secure.gravatar.com/avatar/8e03c27a9b2aca99ca809828713a0e7c?s=40&amp;d=mm">
					</td>
					<td class="title first" style="padding-left:0px;width:550px;"><%= link_to issue.subject, project_issue_path(@project, issue) %></td>
					<td style="width:110px;">
<span><img alt="" style="display:inline;width:20px;" class="avatar" src="https://secure.gravatar.com/avatar/8e03c27a9b2aca99ca809828713a0e7c?s=40&amp;d=mm"></span>
<span><img alt="" style="display:inline;width:20px;" class="avatar" src="https://secure.gravatar.com/avatar/8e03c27a9b2aca99ca809828713a0e7c?s=40&amp;d=mm"></span>
<span><img alt="" style="display:inline;width:20px;" class="avatar" src="https://secure.gravatar.com/avatar/8e03c27a9b2aca99ca809828713a0e7c?s=40&amp;d=mm"></span>
<span><img alt="" style="display:inline;width:20px;" class="avatar" src="https://secure.gravatar.com/avatar/8e03c27a9b2aca99ca809828713a0e7c?s=40&amp;d=mm"></span>
						  </br>+ <%= @issues.count %> others</td>
					<td class="center" style="width:50px;"><%= @issues.count %></td>
					<td class="lastEditedDate" style="width:110px;"><%= issue.created %></td>
					<td class="action last"><%= link_to('<span class="glyphicon glyphicon-remove">'.html_safe, project_issue_path(@project, issue), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</section>

	<% end %>


