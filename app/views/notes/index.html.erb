<% content_for :nav do %>
<%= render 'layouts/nav/project' %>
<% end %>
<style type="text/css">
body{
	background-color: #eee;
}
#notes-body {
display:inline-block;
background-color: #fff;
margin: 0 auto;
box-shadow: 0 1px 2px #aaa;
border-collapse: collapse;
border: 0;
text-shadow: none;
width:100%;
background-color: #fff;
}

</style>
   <script type="text/javascript">
   $(document).ready(function() {
   		$("#new_note_form").hide();
   });
   </script>
<div class="row">

	<div class="col-lg-12">
		<div class="project_clone_panel">
			<strong>Notes for <%= @project.name %> </strong>
			<span class="glyphicon glyphicon-plus-sign pull-right" style="font-size:20px;" onClick='$("#new_note_form").toggle();'>			
			</div>

			<section id="notes-body" style="margin-top:-10px;">
				<div id="new_note_form">
					<%= render 'form'%>
				</div>
			</section>
			</div>

			<div class="content_list">

				<% if !@notes.present? %>
				<p class="center">There are no notes for this project.</p>
				<% else %>
				<% @notes.each do |note| %>
				<%= link_to '<span class="glyphicon glyphicon-arrow-up">'.html_safe, up_vote_note_path(note) %>

				<%= note.vote_count %>
				<%= link_to '<span class="glyphicon glyphicon-arrow-down">'.html_safe, down_vote_note_path(note) %>

				<div>
					<span class="cgray pull-right">
						<%= note.created %>
					</span>

					<img alt="" style="font-size:13px" class="avatar s24" src="https://secure.gravatar.com/avatar/8e03c27a9b2aca99ca809828713a0e7c?s=40&amp;d=mm">

					<div style="display:inline">
						<strong>
							<%= link_to note.subject, project_note_path(@project, note) %>
						</strong>
					</div>
				</div>
			</br>
			<% end %>
			<% end %>
		</div>
	</div>